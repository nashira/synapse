<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/button_close"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/done"
        android:src="@drawable/ic_keyboard_arrow_down"
        android:tint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/button_close">

        <TextView
            android:id="@+id/label_capture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/property_name_camera_capture_size"
            android:textAppearance="?android:attr/textAppearanceButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:id="@+id/group_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_capture">

            <RadioButton
                android:id="@+id/size_720p"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/property_label_camera_capture_size_720" />

            <RadioButton
                android:id="@+id/size_1080p"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/property_label_camera_capture_size_1080" />
        </RadioGroup>

        <TextView
            android:id="@+id/label_fps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/property_name_frame_rate"
            android:textAppearance="?android:attr/textAppearanceButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/group_size" />

        <RadioGroup
            android:id="@+id/group_fps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_fps">

            <RadioButton
                android:id="@+id/fps_30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/property_label_camera_fps_30" />

            <RadioButton
                android:id="@+id/fps_60"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/property_label_camera_fps_60" />
        </RadioGroup>

        <TextView
            android:id="@+id/label_stabilize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/property_name_camera_stabilize"
            android:textAppearance="?android:attr/textAppearanceButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/group_fps" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_stabilize">

            <RadioButton
                android:id="@+id/stabilize_on"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/property_label_on" />

            <RadioButton
                android:id="@+id/stabilize_off"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/property_label_off" />
        </RadioGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>